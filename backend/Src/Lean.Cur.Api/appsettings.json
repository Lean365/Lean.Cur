{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=LeanCur;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "LeanCur_JWT_Secret_Key_2024",
    "Issuer": "LeanCur",
    "Audience": "LeanCur",
    "ExpirationMinutes": 120
  },
  "CacheSettings": {
    "UseRedis": false,
    "Redis": {
      "ConnectionString": "localhost:6379",
      "DefaultDatabase": 0,
      "Password": null,
      "Ssl": false,
      "ConnectTimeout": 5000
    }
  },
  "SecuritySettings": {
    "Cors": {
      "Enabled": true,
      "Origins": [
        "http://localhost:5173"
      ],
      "Methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ],
      "Headers": [
        "*"
      ],
      "AllowCredentials": true
    },
    "RateLimit": {
      "DefaultSeconds": 1,
      "DefaultMaxRequests": 10,
      "IpRateLimit": {
        "Seconds": 60,
        "MaxRequests": 1000
      },
      "UserRateLimit": {
        "Seconds": 60,
        "MaxRequests": 100
      }
    },
    "SqlInjection": {
      "Enabled": true,
      "LogLevel": "Warning",
      "ExcludePaths": [
        "/api/health",
        "/swagger"
      ],
      "CustomPatterns": []
    },
    "AntiForgery": {
      "Enabled": true,
      "HeaderName": "X-XSRF-TOKEN",
      "CookieName": "XSRF-TOKEN",
      "ExcludePaths": [
        "/api/auth/login",
        "/api/auth/logout"
      ]
    },
    "DataScope": {
      "Enabled": true,
      "DefaultScopeType": "Self",
      "ExcludePaths": []
    },
    "Permission": {
      "Enabled": true,
      "SuperAdminRoleCode": "superadmin",
      "IgnorePaths": [
        "/api/auth/login",
        "/api/auth/logout",
        "/api/common"
      ],
      "CacheExpiration": 3600
    }
  }
}