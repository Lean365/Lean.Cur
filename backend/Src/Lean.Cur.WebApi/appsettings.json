{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SecuritySettings": {
    "LoginLimits": {
      "HourlyMaxAttempts": 3,
      "DailyMaxAttempts": 9,
      "MaxOnlineDevices": 3,
      "LockoutDuration": "-1"
    }
  },
  "SSOSettings": {
    "Enabled": true,
    "TokenValidityMinutes": 30,
    "RefreshTokenValidityDays": 7,
    "SingleSignOn": true,
    "MaxConcurrentSessions": 3,
    "SessionTimeout": "00:20:00",
    "DeviceTracking": {
      "Enabled": true,
      "TrackDeviceInfo": true,
      "TrackLocation": true
    },
    "SecurityPolicies": {
      "RequireSecureConnection": true,
      "ValidateIPAddress": true,
      "ValidateUserAgent": true,
      "PreventConcurrentLogin": true
    }
  }
}