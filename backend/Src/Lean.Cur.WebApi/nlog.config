<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info">

  <!-- 启用 ASP.NET Core 布局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 日志输出目标 -->
  <targets>
    <!-- 文件日志 -->
    <target xsi:type="File" name="allfile"
            fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- SQL日志 -->
    <target xsi:type="ColoredConsole" name="sqlConsole"
            layout="${longdate}|${uppercase:${level}}|SQL操作|${message}">
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Cyan"/>
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray"/>
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
    </target>

    <!-- 数据库操作日志 -->
    <target xsi:type="ColoredConsole" name="databaseConsole"
            layout="${longdate}|${uppercase:${level}}|数据库操作|${message}">
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Green"/>
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
    </target>

    <!-- 用户操作日志 -->
    <target xsi:type="ColoredConsole" name="userActionConsole"
            layout="${longdate}|${uppercase:${level}}|用户操作|${message}">
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Green"/>
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
    </target>

    <!-- 系统运行日志 -->
    <target xsi:type="ColoredConsole" name="systemConsole"
            layout="${longdate}|${uppercase:${level}}|系统运行|${message}">
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White"/>
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
    </target>
  </targets>

  <!-- 日志规则 -->
  <rules>
    <!-- 所有日志写入文件 -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- SQL日志 -->
    <logger name="Lean.Cur.Infrastructure.Database.LeanAopProvider" minlevel="Debug" writeTo="sqlConsole" />

    <!-- 数据库相关日志 -->
    <logger name="Lean.Cur.Infrastructure.Extensions.DatabaseExtensions" minlevel="Debug" writeTo="databaseConsole" />
    <logger name="SqlSugar.*" minlevel="Debug" writeTo="databaseConsole" />

    <!-- 用户操作日志 -->
    <logger name="Lean.Cur.*.Services.*" minlevel="Info" writeTo="userActionConsole" />
    <logger name="Lean.Cur.*.Controllers.*" minlevel="Info" writeTo="userActionConsole" />

    <!-- 系统日志 -->
    <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="systemConsole" />
    <logger name="Microsoft.*" minlevel="Warning" writeTo="systemConsole" final="true" />
    <logger name="*" minlevel="Info" writeTo="systemConsole" />
  </rules>
</nlog> 